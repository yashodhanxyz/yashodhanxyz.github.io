---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string;
  width?: number;
  heights?: string;
  loading?: 'lazy' | 'eager';
}

const { src, alt, caption, width, heights, loading = 'lazy' } = Astro.props;
---
<figure class="content-image">
  <Image src={src} alt={alt} loading={loading} decoding="async" width={width} heights={heights} />
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .content-image {
    margin: 2.2rem 0;
    display: grid;
    gap: 0.6rem;
  }

  .content-image :global(img) {
    width: 100%;
    height: auto;
    border-radius: var(--radius-base);
    display: block;
  }

  figcaption {
    font-size: 0.95rem;
    color: var(--color-muted);
  }
</style>

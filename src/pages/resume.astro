---
import BaseLayout from '../layouts/BaseLayout.astro';

const highlights = [
  {
    title: 'Order',
    role: 'Founding Product Engineer',
    period: '2023 — Present',
    bullets: [
      'Stood up the orchestration engine, event-driven infrastructure, and design system used across the platform.',
      'Partnered with ops leaders to codify fulfillment workflows, shipping iterative automation with guardrails.',
      'Built feedback rituals that keep discovery, delivery, and product strategy in tight alignment.',
    ],
  },
  {
    title: 'The Legal Chronicles',
    role: 'Product & Storytelling Lead',
    period: '2022 — 2023',
    bullets: [
      'Created the editorial pipeline and CMS tooling that turned expert insights into approachable narratives.',
      'Scaled a modular component library to support interviews, explainers, and interactive timelines.',
      'Measured impact through qualitative and quantitative loops, reinforcing trust with legal partners.',
    ],
  },
  {
    title: 'Studio Sprints',
    role: 'Fractional Product Partner',
    period: '2019 — 2022',
    bullets: [
      'Guided early-stage founders from idea to MVP across fintech, health, and marketplace domains.',
      'Established async collaboration rituals and discovery cadences that reduced cycle time by up to 40%.',
      'Mentored designers and engineers, leveling up documentation practices and accessibility standards.',
    ],
  },
];
---

<BaseLayout title="Yashodhan | Resume" description="Experience, skills, and impact from Yashodhan's product engineering journey.">
  <header class="resume-hero">
    <h1>Resume</h1>
    <p>
      Product-minded engineer focused on shipping dependable systems, narrative-rich interfaces, and rituals that keep teams in
      sync. Download the PDF resume for a formatted snapshot or explore the highlights below.
    </p>
    <a class="resume-hero__download" href="/resume.pdf" data-analytics-goal="Resume download">
      Download PDF
    </a>
  </header>

  <section class="resume-section" aria-labelledby="experience-heading">
    <h2 id="experience-heading">Experience</h2>
    <div class="experience-grid">
      {highlights.map((item) => (
        <article class="experience-card">
          <header>
            <h3>{item.title}</h3>
            <p class="experience-card__meta">
              <span>{item.role}</span>
              <span aria-hidden="true">•</span>
              <span>{item.period}</span>
            </p>
          </header>
          <ul>
            {item.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </section>

  <section class="resume-section" aria-labelledby="skills-heading">
    <h2 id="skills-heading">Expertise</h2>
    <div class="pill-row">
      <span>Product Engineering</span>
      <span>Systems Design</span>
      <span>Workflow Automation</span>
      <span>Design Systems</span>
      <span>Accessibility</span>
      <span>Content Strategy</span>
      <span>Discovery Rituals</span>
      <span>Mentorship</span>
    </div>
  </section>

  <style>
    .resume-hero {
      display: grid;
      gap: 1rem;
      max-width: 70ch;
      margin-bottom: 3rem;
    }

    .resume-hero h1 {
      margin: 0;
      font-size: clamp(2rem, 4vw, 2.6rem);
    }

    .resume-hero__download {
      justify-self: flex-start;
      padding: 0.75rem 1.4rem;
      border-radius: 999px;
      background: var(--color-accent);
      color: #f8fafc;
      font-weight: 600;
    }

    .resume-hero__download:hover,
    .resume-hero__download:focus-visible {
      text-decoration: none;
      box-shadow: 0 16px 30px rgba(37, 99, 235, 0.25);
    }

    .resume-section {
      margin-bottom: 3rem;
    }

    .experience-grid {
      display: grid;
      gap: 1.5rem;
    }

    .experience-card {
      border: 1px solid var(--color-border);
      border-radius: var(--radius-base);
      padding: 1.6rem;
      background: var(--color-surface);
      display: grid;
      gap: 0.75rem;
    }

    .experience-card h3 {
      margin: 0;
    }

    .experience-card__meta {
      display: inline-flex;
      gap: 0.6rem;
      color: var(--color-muted);
      font-size: 0.95rem;
      margin: 0.35rem 0 0;
    }

    .experience-card ul {
      margin: 0;
      padding-left: 1.2rem;
      display: grid;
      gap: 0.5rem;
    }

    .pill-row {
      display: flex;
      flex-wrap: wrap;
      gap: 0.6rem;
    }

    .pill-row span {
      padding: 0.4rem 0.9rem;
      border-radius: 999px;
      background: rgba(37, 99, 235, 0.1);
      color: var(--color-accent);
      font-weight: 600;
      font-size: 0.95rem;
    }
  </style>
</BaseLayout>

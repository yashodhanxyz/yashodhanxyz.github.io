---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import QuoteRotator from '../components/ui/QuoteRotator.astro';
import headshotImage from '../assets/site/headshot-placeholder.svg';
import { getPublishedPosts } from '../utils/blog';
import { createPersonJsonLd, createWebsiteJsonLd } from '../utils/site';

import { getCollection } from 'astro:content';

const quotesCollection = await getCollection('quotes');
const fallbackTagline = {
  heading: 'Designing dependable experiences for product-led teams.',
  body: 'I help teams orchestrate complex workflows with calm energy and a focus on outcomes.',
};

const heroQuotes = quotesCollection.map((entry) => ({
  id: entry.id,
  quote: entry.data.quote,
  author: entry.data.author,
  source: entry.data.source,
}));

const hasQuotes = heroQuotes.length > 0;

const blogEntries = await getPublishedPosts();

const latestPosts = blogEntries.slice(0, 3).map((entry) => ({
  title: entry.data.title,
  description: entry.data.description,
  href: `/blog/${entry.slug}`,
  publishedAt: entry.data.publishedAt,
}));

const formatDate = (date: Date) =>
  new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  }).format(date);

const structuredData = [createPersonJsonLd(), createWebsiteJsonLd()];
---

<BaseLayout
  title="Yashodhan | Home"
  description="Product-minded engineer building calm, dependable experiences."
  structuredData={structuredData}
>
  <section class="hero" aria-labelledby="hero-heading">
    <div class="hero__inner">
      <p class="eyebrow">Product strategy · Systems thinking · Interface craft</p>
      <h1 id="hero-heading">
        {hasQuotes ? 'What collaborators say' : fallbackTagline.heading}
      </h1>
      {hasQuotes ? (
        <QuoteRotator items={heroQuotes} />
      ) : (
        <p class="hero__fallback">{fallbackTagline.body}</p>
      )}
    </div>
  </section>

  <section class="bio" aria-labelledby="bio-heading">
    <div class="bio__text">
      <h2 id="bio-heading">Product-minded engineering in service of clarity.</h2>
      <p>
        I partner with cross-functional teams to launch resilient products that balance deep systems thinking with
        crisp storytelling.
      </p>
      <p>
        My playbook blends discovery, pragmatic architecture, and craft to move ideas from Figma to the field without
        losing momentum.
      </p>
    </div>
    <figure class="bio__headshot">
      <Image src={headshotImage} alt="Portrait of Yashodhan" width={240} loading="lazy" />
    </figure>
  </section>

  <section class="features" aria-labelledby="features-heading">
    <div class="section-header">
      <h2 id="features-heading">Featured Initiatives</h2>
      <p>A peek at the current focus areas.</p>
    </div>
    <div class="feature-grid">
      <article class="feature-card" id="order-card">
        <h3>Order</h3>
        <p>Automating fulfillment flows for operations teams without sacrificing human oversight.</p>
        <a
          class="feature-link"
          href="/projects/order"
          data-analytics-goal="Order outbound"
        >
          Explore Order
        </a>
      </article>
      <article class="feature-card" id="legal-chronicles-card">
        <h3>The Legal Chronicles</h3>
        <p>Transforming dense legal insights into narratives teams can trust and act on quickly.</p>
        <a
          class="feature-link"
          href="/projects/legal-chronicles"
          data-analytics-goal="Legal Chronicles outbound"
        >
          Read the story
        </a>
      </article>
    </div>
  </section>

  <section class="blog-list" aria-labelledby="blog-heading">
    <div class="section-header">
      <h2 id="blog-heading">Latest Writing</h2>
      <p>Fresh notes from the product desk.</p>
    </div>
    {latestPosts.length > 0 ? (
      <ul>
        {latestPosts.map((post) => (
          <li class="blog-card">
            <a href={post.href}>
              <span class="blog-card__date">{formatDate(post.publishedAt)}</span>
              <span class="blog-card__title">{post.title}</span>
              <span class="blog-card__description">{post.description}</span>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="blog-empty">Writing is coming soon. Subscribe or check back for new posts.</p>
    )}
  </section>

  <style>
    .hero {
      padding: 4rem 0 3rem;
    }

    .hero__inner {
      display: grid;
      gap: 1.5rem;
      max-width: 640px;
    }

    .eyebrow {
      font-size: 0.85rem;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: var(--color-muted);
    }

    .hero h1 {
      margin: 0;
      font-size: clamp(2.1rem, 4vw, 2.8rem);
      line-height: 1.1;
    }

    .hero__fallback {
      font-size: 1.2rem;
      line-height: 1.7;
      max-width: 54ch;
    }

    .bio {
      display: grid;
      gap: 2rem;
      margin: 3rem 0;
      align-items: center;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    .bio__text h2 {
      font-size: clamp(1.8rem, 3vw, 2.2rem);
      margin-bottom: 1rem;
    }

    .bio__text p {
      margin-top: 0;
      margin-bottom: 1rem;
      line-height: 1.7;
      max-width: 60ch;
    }

    .bio__headshot {
      margin: 0;
      justify-self: center;
      padding: 0.75rem;
      border-radius: 50%;
      background: linear-gradient(145deg, rgba(37, 99, 235, 0.2), rgba(15, 118, 110, 0.1));
      display: grid;
      place-items: center;
    }

    .bio__headshot :global(img) {
      border-radius: 50%;
      display: block;
      width: 220px;
      height: 220px;
      object-fit: cover;
    }

    .features {
      margin: 4rem 0;
    }

    .section-header {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      margin-bottom: 2rem;
    }

    .section-header h2 {
      margin: 0;
      font-size: clamp(1.6rem, 2.6vw, 2rem);
    }

    .feature-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.5rem;
    }

    .feature-card {
      border: 1px solid var(--color-border);
      border-radius: var(--radius-base);
      padding: 1.75rem;
      display: grid;
      gap: 0.75rem;
      background: var(--color-surface);
    }

    .feature-card h3 {
      margin: 0;
      font-size: 1.25rem;
    }

    .feature-card p {
      margin: 0;
      line-height: 1.6;
    }

    .feature-link {
      font-weight: 600;
      color: var(--color-accent);
      justify-self: flex-start;
    }

    .feature-link:hover,
    .feature-link:focus-visible {
      text-decoration: underline;
    }

    .blog-list {
      margin: 4rem 0 2rem;
    }

    .blog-list ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: grid;
      gap: 1rem;
    }

    .blog-card {
      border: 1px solid var(--color-border);
      border-radius: var(--radius-base);
      background: var(--color-surface);
      transition: transform var(--transition-speed) ease, box-shadow var(--transition-speed) ease;
    }

    .blog-card a {
      display: grid;
      gap: 0.35rem;
      padding: 1.5rem;
      color: inherit;
    }

    .blog-card:hover,
    .blog-card:focus-within {
      transform: translateY(-4px);
      box-shadow: 0 18px 36px rgba(15, 23, 42, 0.08);
    }

    .blog-card__date {
      font-size: 0.85rem;
      color: var(--color-muted);
      letter-spacing: 0.02em;
    }

    .blog-card__title {
      font-size: 1.2rem;
      font-weight: 600;
    }

    .blog-card__description {
      color: var(--color-muted);
      line-height: 1.6;
    }

    .blog-empty {
      margin: 0;
      color: var(--color-muted);
    }

    @media (max-width: 640px) {
      .hero {
        padding-top: 3rem;
      }

      .quote-rotator {
        padding: 1.25rem;
      }

      .bio__headshot :global(img) {
        width: 200px;
        height: 200px;
      }
    }
  </style>
</BaseLayout>
